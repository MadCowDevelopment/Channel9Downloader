<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="EnabledGroupTemplate">
        <Border Background="#FFF79800" Margin="5" CornerRadius="3">
            <StackPanel Orientation="Horizontal">
                <Image Margin="10,0,0,0" Source="..\Images\Categories\Enabled.png" Height="20"/>
                <TextBlock Margin="5,0,0,0" Foreground="White" FontSize="18" FontWeight="Bold" Text="{Binding Name}" />
            </StackPanel>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="DisabledGroupTemplate">
        <Border Background="#FFF79800" Margin="5" CornerRadius="3">
            <StackPanel Orientation="Horizontal">
                <Image Margin="10,0,0,0" Source="..\Images\Categories\Disabled.png" Height="20"/>
                <TextBlock Margin="5,0,0,0" Foreground="White" FontSize="18" FontWeight="Bold" Text="{Binding Name}" />
            </StackPanel>            
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="AlphaticalGroupTemplate">
        <TextBlock Margin="35,0,0,0" FontSize="16" FontWeight="Bold" Text="{Binding Name}" />
    </DataTemplate>
</ResourceDictionary>